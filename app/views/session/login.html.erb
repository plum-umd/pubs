
<h2>Please Log In</h2>

  <% if flash[:notice] %>
     <font color="red"><%= flash[:notice] %></font>
  <% end %>

  <% form_tag :action => 'authenticate' do %>
    <p>
      <label for="name">Name:</label>
      <%= text_field_tag :name, params[:name] %>
    </p>

    <p>
      <label for="password">Password:</label>
      <%= password_field_tag :password, params[:password] %>
    </p>

    <p>
      <%= submit_tag "Login" %>
    </p>
  <% end %>
